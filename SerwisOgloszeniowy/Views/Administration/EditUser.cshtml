<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<h1>Edytuj użytkownika</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nazwa użytkownika</label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Imię</label>
        <div class="col-sm-10">
            <input asp-for="Firstname" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Miasto</label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Numer telefonu</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNo" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Zmień</button>
            <a asp-action="UserList" class="btn btn-primary">Cofnij</i></a>
        </div>
    </div>
</form>
<div class="card">
    <div class="card-header">
        <h3>Role użytkownika</h3>
    </div>
    <div class="card-body">
        @if(Model.Roles.Any())
            {
            foreach(var role in Model.Roles)
            {
            <h5 class="card-title">@role</h5>
            }
            }
            else
            {
            <h5 class="card-title">Brak ról</h5>
            }
    </div>
    <div class="card-footer">
        <a asp-action="UserRoles" asp-route-userId="@Model.Id" class="btn btn-primary">Zmień role</a>
    </div>
</div>


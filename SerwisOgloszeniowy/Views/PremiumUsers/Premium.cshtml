@model SerwisOgloszeniowy.Models.PremiumUsers.PremiumUsersModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="card">
    <div class="card-header">
        <h2>Aktywuj konto premium</h2>
    </div>
    <div class="card-body">
        <form asp-action="AddPremium" asp-controller="PremiumUsers">
            <button class="btn btn-success" type="submit">Dodaj</button>
            @if (ViewBag.Message != null && ViewBag.Message == "Już jesteś użytkownikiem premium.")
            {
                <br />
                <span style="color:green;">Już jesteś użytkownikiem premium.</span>
            }
        </form>
    </div>
</div>